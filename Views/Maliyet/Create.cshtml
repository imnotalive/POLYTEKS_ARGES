@model POLYTEKS_ARGE.Models.ARGE_Maliyet

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12">
    <div class="card" style="color:aliceblue">
        <div class="card-header">

            <center><h2 style="color: black"><b>MALİYET GİRİŞİ</b></h2></center>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption">

                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-12">
                                <div class="card" style="background-color:wheat">
                                    <div class="card-header">
                                        <div class="form-group">
                                            <b> @Html.Label("MALİYET TARİHİ", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                                            <div class="col-md-12">
                                                @Html.TextBoxFor(model => model.MaliyetTarih, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control", style = "color:black" })
                                                @Html.ValidationMessageFor(model => model.MaliyetTarih, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-md-12">
                                <div class="card" style="background-color:wheat">
                                    <div class="card-header">
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <b>@Html.Label("MALİYET ADI", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                                                <div class="col-md-12">
                                                    @Html.EditorFor(model => model.MaliyetAdi, new { htmlAttributes = new { @class = "form-control", style = "color:black" } })
                                                    @Html.ValidationMessageFor(model => model.MaliyetAdi, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <b>@Html.Label("FİRMA ADI", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                                                <div class="col-md-12">
                                                    @Html.EditorFor(model => model.Firma, new { htmlAttributes = new { @class = "form-control", style = "color:black" } })
                                                    @Html.ValidationMessageFor(model => model.Firma, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-md-12">
                                <div class="card" style="background-color:wheat">
                                    <div class="card-header">
                                        <div class="form-group">
                                            <b> @Html.Label("PERSONEL", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.Personel, new { htmlAttributes = new { @class = "form-control", style = "color:black" } })
                                                @Html.ValidationMessageFor(model => model.Personel, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-md-12">
                                <div class="card" style="background-color:rebeccapurple">
                                    <div class="card-header">
                                        <div class="form-row">
                                            <div class="form-group col-md-4">
                                                <b>@Html.Label("KDV'li TUTAR", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                                                <div class="col-md-12">
                                                    @Html.EditorFor(model => model.KDVliMiktar, new { htmlAttributes = new { @class = "form-control", style = "color:black" } })
                                                    @Html.ValidationMessageFor(model => model.KDVliMiktar, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group col-md-4">
                                                <b> @Html.Label("KDV'siz TUTAR", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                                                <div class="col-md-12">
                                                    @Html.EditorFor(model => model.KDVsizMiktar, new { htmlAttributes = new { @class = "form-control", style = "color:black" } })
                                                    @Html.ValidationMessageFor(model => model.KDVsizMiktar, "", new { @class = "text-danger" })
                                                </div>
                                            </div>



                                            <div class="form-group col-md-4">
                                                <b>@Html.Label("TUTAR BİRİMİ", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                                                <div class="col-md-12">
                                                    @Html.DropDownListFor(model => model.Birim, new List<SelectListItem>
                                                                  {
                                                                            new  SelectListItem { Text = "TL", Value = "TL" },
                                                                  new  SelectListItem { Text = "EURO", Value = "EURO" },

                                                                    new  SelectListItem { Text = "USD", Value = "USD" },



                                                                  }, "--LÜTFEN BİRİMİ SEÇİNİZ--", new { @style = "color:black", @class = "form-control", required = "required", title = "Lütfen Birimi Seçiniz!" })

                                                    @Html.ValidationMessageFor(model => model.Birim, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-md-12">
                                <div class="card" style="background-color:wheat">
                                    <div class="card-header">
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <b>@Html.Label("MALİYET TİPİ", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                                                <div class="col-md-12">
                                                    @Html.DropDownListFor(model => model.MaliyetTipi, new List<SelectListItem>
                                                                 {
                                                                           new  SelectListItem { Text = "HİZMET", Value = "HİZMET" },
                                                                 new  SelectListItem { Text = "MALZEME", Value = "MALZEME" },

                                                                 }, "--LÜTFEN MALİYET TİPİNİ SEÇİNİZ--", new { @style = "color:black", @class = "form-control", required = "required", title = "Lütfen Maliyet Tipini Seçiniz!" })

                                                    @Html.ValidationMessageFor(model => model.MaliyetTipi, "", new { @class = "text-danger" })
                                                </div>
                                            </div>



                                            <div class="form-group col-md-6">
                                                <b>@Html.Label("PROJE", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                                                <div class="col-md-12">
                                                    @Html.DropDownList("ProjeId", null, "--PROJE SEÇİNİZ--", htmlAttributes: new { @class = "form-control", @style = "color:black" })
                                                    @Html.ValidationMessageFor(model => model.ProjeId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-md-12">
                                <div class="card" style="background-color:wheat">
                                    <div class="card-header">
                                        <div class="form-group">
                                            <b>@Html.Label("AÇIKLAMA", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                                            <div class="col-md-12">
                                                @Html.TextAreaFor(model => model.Aciklama, 3, 50, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-12">
                                    <input type="submit" value="MALİYET OLUŞTUR" class="btn btn-success btn-block" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }
            <br />
            <div>
                @Html.ActionLink("LİSTEYE DÖN", "Index", "Maliyet", new { @class = "btn btn-primary" })
            </div>




            <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
            <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

            <script>
                $(function () {
                    $("#datepicker").datepicker;
                });
            </script>

        </div>
    </div>
</div>
<div id="loader" class="center"></div>

<script>
    document.onreadystatechange = function () {
        if (document.readyState !== "complete") {
            document.querySelector(
                "body").style.visibility = "hidden";
            document.querySelector(
                "#loader").style.visibility = "visible";
        } else {
            document.querySelector(
                "#loader").style.display = "none";
            document.querySelector(
                "body").style.visibility = "visible";
        }
    };
</script>
<style>
    #loader {
        border: 12px solid #f3f3f3;
        border-radius: 50%;
        border-top: 12px solid #444444;
        width: 70px;
        height: 70px;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        100% {
            transform: rotate(360deg);
        }
    }

    .center {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;
    }
</style>