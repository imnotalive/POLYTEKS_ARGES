@model POLYTEKS_ARGE.Models.ARGE_ProjeDenemeleri
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-12">
        <div class="card">
            <div class="card-header text-center bg-dark text-white">
                <div class="row align-items-center">
                    <div class="col-md-11">
                        <center> <h4><b>YENİ HAVA TEKSTÜRE DENEMESİ EKLE</b></h4></center>
                    </div>
                </div>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-row">
                <div class="form-group col-md-6">

                    <b>   @Html.Label("DENEME TARİHİ", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.DenemeTarih, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control", style = "color:black" })
                        @Html.ValidationMessageFor(model => model.DenemeTarih, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <b> @Html.Label("DENEME ADI", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.DenemeAdi, new { htmlAttributes = new { @class = "form-control", style = "color:black", onkeyup = "InputToUpper(this);" } })
                        @Html.ValidationMessageFor(model => model.DenemeAdi, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <b>  @Html.Label("PROJE", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                    <div class="col-md-12">
                        @Html.DropDownList("ProjeId", null, "PROJE SEÇİNİZ", htmlAttributes: new { @class = "form-control", required = "required", style = "color:black" })
                        @Html.ValidationMessageFor(model => model.ProjeId, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group col-md-4">

                    <b> @Html.Label("POY/FDY LOTU", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                    <div class="col-md-12">
                        @Html.DropDownListFor(m => m.POYLotu, ViewBag.Kategoriler1 as IEnumerable<SelectListItem>, "POY LOTU SEÇİNİZ", new { @class = "form-control", style = "color:black" })
                        @Html.ValidationMessageFor(model => model.POYLotu, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group col-md-4">
                    <b>   @Html.Label("TEKSTÜRE LOTU", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                    <div class="col-md-12">
                        @Html.DropDownListFor(m => m.TekstureLotu, ViewBag.Kategoriler as IEnumerable<SelectListItem>, "TEKSTÜRE LOTU SEÇİNİZ", new { @class = "form-control", style = "color:black" })
                        @Html.ValidationMessageFor(model => model.TekstureLotu, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">

                    <b>  @Html.Label("HAVA TEKSTÜRE LOTU", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.HavaTekstureLotu, new { htmlAttributes = new { @class = "form-control", style = "color:black" } })
                        @Html.ValidationMessageFor(model => model.HavaTekstureLotu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-3">
                    <b>  @Html.Label("HAVA TEKSTÜRE DTEX", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.HavaTekstureDtex, new { htmlAttributes = new { @class = "form-control", style = "color:black" } })
                        @Html.ValidationMessageFor(model => model.HavaTekstureDtex, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-3">
                    <b> @Html.Label("HAVA TEKSTÜRE MİKTARI", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.HavaTekstureMiktari, new { htmlAttributes = new { @class = "form-control", style = "color:black" } })
                        @Html.ValidationMessageFor(model => model.HavaTekstureMiktari, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-3">
                    <b>@Html.Label("HAVA TEKSTÜRE MAKİNESİ", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.HavaTekstureMakinesi, (List<SelectListItem>)ViewBag.dgr5, "Lütfen Seçiniz", new { @class = "form-control", style = "color:black" })
                        @Html.ValidationMessageFor(model => model.HavaTekstureMakinesi, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <b>  @Html.Label("KESİT TİPİ", htmlAttributes: new { @class = "control-label col-md-12", style = "color:black" })</b>
                <div class="col-md-12">
                    @Html.DropDownListFor(model => model.BukumDenemeKesit, new List<SelectListItem>
                    {
                              new  SelectListItem { Text = "CORE AND SHEATH", Value = "CORE AND SHEATH" },
                    new  SelectListItem { Text = "HOLLOW", Value = "HOLLOW" },

                      new  SelectListItem { Text = "SEA AND ISLAND", Value = "SEA AND ISLAND" },

                          new  SelectListItem { Text = "SIDE BY SIDE", Value = "SIDE BY SIDE" },
                              new  SelectListItem { Text = "ROUND", Value = "ROUND" },
                                  new  SelectListItem { Text = "TRILOBAL", Value = "TRILOBAL" },
                                      new  SelectListItem { Text = "OCTOLOBAL", Value = "OCTOLOBAL" },
                                          new  SelectListItem { Text = "W", Value = "W" },
                                              new  SelectListItem { Text = "WW", Value = "WW" },
                                                  new  SelectListItem { Text = "YASSI", Value = "YASSI" },
                                                           new  SelectListItem { Text = "YASSI YASSI", Value = "YASSI YASSI" },
                    }, "KESİT TİPİNİ SEÇİNİZ", new { @style = "color:black", @class = "form-control", required = "required", title = "Lütfen Kesit Tipini Seçiniz!" })
                    @Html.ValidationMessageFor(model => model.BukumDenemeKesit, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group">
                <b>  @Html.Label("BİLEŞEN", htmlAttributes: new { @class = "control-label col-md-6", style = "color:black" })</b>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Bilesen1, new { htmlAttributes = new { @class = "form-control", style = "color:black" } })
                    @Html.ValidationMessageFor(model => model.Bilesen1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <b> @Html.Label("AÇIKLAMA", htmlAttributes: new { @class = "control-label col-md-6", style = "color:black" })</b>
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.Aciklama, 10, 50, new { @class = "form-control", style = "color:black" })
                    @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="HAVA TEKSTÜRE DENEMESİ OLUŞTUR" class="btn btn-dark btn-block" />
                </div>
            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<script>
    $(function () {
        $("#datepicker").datepicker;
    });
</script>
<script>
    function InputToUpper(obj) {
        if (obj.value != "") {
            obj.value = obj.value.toUpperCase();
        }
    }
</script>
